  "sideEffects": false,
  "peerDependencies": {
    "@gltf-transform/core": ">=2.1.0",
    "@gltf-transform/extensions": ">=2.1.0",
    "@types/three": ">=0.130.0",
    "three": ">=0.130.1"
  },
  "devDependencies": {
    "@gltf-transform/core": "^2.1.5",
    "@gltf-transform/extensions": "^2.1.5",
    "@gltf-transform/functions": "^2.1.5",
    "@tweakpane/core": "^1.0.9",
    "@types/source-map-support": "^0.5.4",
    "@types/three": "^0.140.0",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "concurrently": "^7.1.0",
    "microbundle": "^0.15.0",
    "simple-dropzone": "^0.8.1",
    "snowpack": "^3.8.8",
    "source-map-support": "^0.5.21",
    "tap-spec": "^5.0.0",
    "tape": "^5.3.2",
    "three": "0.140.0",
    "tweakpane": "^3.0.8",
    "tweakpane-plugin-thumbnail-list": "^0.3.0",
    "typescript": "^4.6.4"
  },
  "scripts": {
