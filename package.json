{
  "name": "@gltf-transform/view",
  "version": "0.9.0",
  "repository": "github:donmccurdy/glTF-Transform-View",
  "description": "Syncs a glTF-Transform Document with a three.js scene graph",
  "author": "Don McCurdy <dm@donmccurdy.com>",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "source": "./src/index.ts",
  "module": "./dist/view.modern.js",
  "exports": "./dist/view.modern.js",
  "types": "./dist/index.d.ts",
  "peerDependencies": {
    "@gltf-transform/core": ">=2.1.0",
    "@gltf-transform/extensions": ">=2.1.0",
    "@types/three": ">=0.149.0",
    "three": ">=0.150.0"
  },
  "devDependencies": {
    "@gltf-transform/core": "3.1.1",
    "@gltf-transform/extensions": "3.1.1",
    "@gltf-transform/functions": "3.1.1",
    "@tweakpane/core": "1.1.5",
    "@types/node": "^18.14.6",
    "@types/three": "0.149.0",
    "@typescript-eslint/eslint-plugin": "5.55.0",
    "@typescript-eslint/parser": "5.55.0",
    "ava": "^5.2.0",
    "c8": "^7.13.0",
    "concurrently": "7.6.0",
    "eslint": "^8.35.0",
    "jsdom": "^21.1.0",
    "jsdom-global": "^3.0.2",
    "meshoptimizer": "^0.18.1",
    "microbundle": "0.15.1",
    "rimraf": "^4.3.1",
    "simple-dropzone": "0.8.1",
    "suppress-experimental-warnings": "^1.1.4",
    "three": "0.150.1",
    "ts-node": "^10.9.1",
    "tweakpane": "3.1.6",
    "tweakpane-plugin-thumbnail-list": "0.3.0",
    "typescript": "4.9.5",
    "vite": "4.1.4"
  },
  "scripts": {
    "dist": "microbundle --no-compress --format modern",
    "watch": "microbundle watch --no-compress --format modern",
    "dev": "concurrently \"yarn watch\" \"vite -c examples/vite.config.js\"",
    "clean": "rimraf dist/**",
    "test": "ava test/**/*.test.ts",
    "coverage": "c8 --reporter=lcov --reporter=text yarn test --tap",
    "coverage:report": "c8 report --reporter=text-lcov > coverage/coverage.lcov",
    "version": "yarn dist && yarn test",
    "postversion": "git push && git push --tags && npm publish"
  },
  "browserslist": [
    "last 2 and_chr versions",
    "last 2 chrome versions",
    "last 2 opera versions",
    "last 2 ios_saf versions",
    "last 2 safari versions",
    "last 2 firefox versions"
  ],
  "files": [
    "dist/",
    "src/",
    "README.md",
    "LICENSE"
  ],
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm",
      "--require=suppress-experimental-warnings",
      "--require=jsdom-global/register"
    ]
  }
}
